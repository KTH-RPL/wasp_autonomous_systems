<?xml version="1.0" ?>
<robot name="TurtleBot3 Burger Webots">
    <webots>
        <device reference="kinect color" type="Camera">
            <ros>
                <enabled>true</enabled>
                <alwaysOn>false</alwaysOn>
                <updateRate>10</updateRate>
                <topicName>/camera/color</topicName>
                <imageSuffix>/image_raw</imageSuffix>
                <frameName>camera_link</frameName>
            </ros>
        </device>

        <device reference="kinect range" type="RangeFinder">
            <ros>
                <enabled>true</enabled>
                <alwaysOn>false</alwaysOn>
                <updateRate>10</updateRate>
                <topicName>/camera/depth</topicName>
                <imageSuffix>/image_raw</imageSuffix>
                <pointCloudSuffix>/points</pointCloudSuffix>
                <frameName>camera_link</frameName>
            </ros>
        </device>

        <plugin type="webots_ros2_driver::Ros2RGBD">
            <camera>kinect color</camera>
            <alwaysOn>false</alwaysOn>
            <updateRate>10</updateRate>
            <rangeFinder>kinect range</rangeFinder>
            <topicName>/camera/color/points</topicName>
            <frameName>camera_link</frameName>
        </plugin>

        <plugin type="webots_ros2_driver::Ros2IMU">
            <enabled>true</enabled>
            <updateRate>20</updateRate>
            <topicName>/imu</topicName>
            <alwaysOn>false</alwaysOn>
            <frameName>imu_link</frameName>
            <inertialUnitName>inertial_unit</inertialUnitName>
            <gyroName>gyro</gyroName>
            <accelerometerName>accelerometer</accelerometerName>
        </plugin>

        <plugin type="webots_ros2_control::Ros2Control" />

        <!-- type="package_name.file_name.class_name" -->
        <plugin type="webots_ros2_turtlebot.plugin_example.PluginExample">
            <parameterExample>someValue</parameterExample>
        </plugin>
    </webots>

    <ros2_control name="WebotsControl" type="system">
        <hardware>
            <plugin>webots_ros2_control::Ros2ControlSystem</plugin>
        </hardware>
        <joint name="right wheel motor">
            <state_interface name="position"/>
            <command_interface name="velocity"/>
        </joint>
        <joint name="left wheel motor">
            <state_interface name="position"/>
            <command_interface name="velocity"/>
        </joint>
    </ros2_control>
</robot>
